<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>jboss-dist</id>
    <formats>
       <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>teiid-${project.version}</baseDirectory>    
    <moduleSets>     
       <moduleSet>
        <useAllReactorProjects>true</useAllReactorProjects>
        
        <includes>
            <include>org.jboss.teiid.connectors:connector-infinispan-hotrod</include>
            <include>org.jboss.teiid.connectors:translator-infinispan-hotrod</include>
         	<include>org.jboss.teiid.connectors:infinispan-api</include>
            <include>org.jboss.teiid.connectors:document-api</include>
            
        </includes>
                
        <binaries> 
          <includeDependencies>false</includeDependencies>
          <unpack>true</unpack>
          <outputDirectory>.</outputDirectory>
          <attachmentClassifier>jboss-as7-dist</attachmentClassifier>
        </binaries>
      
    </moduleSet>
        
    </moduleSets>  
</assembly>

