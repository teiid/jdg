<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="urn:jboss:module:1.3" name="org.jboss.teiid.translator.infinispan.hotrod">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>
    
    <resources>
        <resource-root path="translator-infinispan-hotrod-${project.version}.jar" />
    </resources>

    <dependencies>
        <module name="javax.api" />
        <module name="javax.resource.api" />
        <module name="org.jboss.teiid.common-core" />
        <module name="org.jboss.teiid.api" />
        <module name="org.jboss.teiid.translator.document.api" />
        <module name="org.jboss.teiid" />    
        <module name="org.jboss.teiid.translator.infinispan.api"/>
        <module name="com.squareup"/>       
        
   <!--   
        To use with JDG EAP HotRod Module Kit -->
        
   		<module name="org.infinispan.commons" slot="${jdg.slot}" optional="true" services="import"/>
   		<module name="org.infinispan.client.hotrod" slot="${jdg.slot}" optional="true" services="import"/>
        <module name="org.infinispan.protostream" slot="${jdg.slot}" optional="true" />
        <module name="org.infinispan.query.dsl" slot="${jdg.slot}" optional="true" />

        <module name="org.infinispan.commons" slot="jdg-7.1" optional="true" services="import"/>
   		<module name="org.infinispan.client.hotrod" slot="jdg-7.1" optional="true" services="import"/>
        <module name="org.infinispan.protostream" slot="jdg-7.1" optional="true" />
        <module name="org.infinispan.query.dsl" slot="jdg-7.1" optional="true" />

    </dependencies>   
</module>
